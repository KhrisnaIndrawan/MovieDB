<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.detail.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
                android:id="@+id/cv_backdrop"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:visibility="invisible"
                app:cardCornerRadius="4dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5">

            <ImageView
                    android:contentDescription="@string/backdrop"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:background="@color/colorPrimary"
                    android:visibility="invisible"
                    android:layout_height="240dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
                    android:id="@+id/img_backdrop"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="160dp"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/cardView">

            <ImageView
                    android:contentDescription="@string/poster"
                    android:layout_width="140dp"
                    android:layout_height="200dp"
                    android:id="@+id/img_poster"
                    android:background="@color/colorPrimary"
                    android:transitionName="poster"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars"
            />
        </androidx.cardview.widget.CardView>


        <TextView
                tools:text="The Movie Title"
                android:textSize="18sp"
                android:textColor="@color/colorTextTertiary"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title" app:layout_constraintStart_toEndOf="@+id/cardView"
                android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/cv_backdrop"
                android:layout_marginTop="8dp"/>
        <TextView
                tools:text="Action | Sci-fi | Fantasy"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorTextTertiary"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:id="@+id/tv_genres"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" app:layout_constraintStart_toEndOf="@+id/cardView"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintHorizontal_bias="0.0"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                style="?android:attr/ratingBarStyleSmall"
                android:id="@+id/ratingBar"
                app:layout_constraintStart_toEndOf="@+id/cardView"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
        <TextView
                android:text="@string/overview"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextTertiary"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_overview" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"/>
        <TextView
                tools:text="Overview body"
                android:textColor="@color/colorTextTertiary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_overview_body" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_overview" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
        <TextView
                tools:text="7.8"
                android:textSize="24sp"
                android:textColor="@color/colorTextTertiary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rating" android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" app:layout_constraintStart_toEndOf="@+id/ratingBar"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="@string/_10"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:textColor="@color/colorTextTertiary"
                android:layout_height="wrap_content"
                android:id="@+id/tv_per_score" app:layout_constraintStart_toEndOf="@+id/tv_rating"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" android:layout_marginStart="4dp"/>
        <TextView
                android:text="@string/release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textColor="@color/colorTextTertiary"
                android:id="@+id/tv_release_date_text" app:layout_constraintStart_toEndOf="@+id/cardView"
                android:layout_marginStart="16dp" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/ratingBar"/>
        <TextView
                tools:text="01 August 2019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextTertiary"
                android:id="@+id/tv_release_date" app:layout_constraintStart_toEndOf="@+id/tv_release_date_text"
                app:layout_constraintTop_toBottomOf="@+id/ratingBar" android:layout_marginTop="12dp"
                android:layout_marginStart="4dp"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.832"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>